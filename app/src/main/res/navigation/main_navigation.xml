<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_posts">

    <fragment
        android:id="@+id/nav_posts"
        android:name="com.binatestation.kickstart.ui.main.post.PostFragment"
        android:label="@string/posts"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/nav_comments"
        android:name="com.binatestation.kickstart.ui.main.gallery.GalleryFragment"
        android:label="@string/comments"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_albums"
        android:name="com.binatestation.kickstart.ui.main.slideshow.SlideshowFragment"
        android:label="@string/albums"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_photos"
        android:name="com.binatestation.kickstart.ui.main.tools.ToolsFragment"
        android:label="@string/photos"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/nav_todo"
        android:name="com.binatestation.kickstart.ui.main.share.ShareFragment"
        android:label="@string/todo"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_users"
        android:name="com.binatestation.kickstart.ui.main.send.SendFragment"
        android:label="@string/users"
        tools:layout="@layout/fragment_send" />
</navigation>